<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
        <constant name="struts.devMode" value="true" />
        <package name="actions" extends="struts-default">

                <!-- If no class attribute is specified the framework will assume success and
                render the result index.jsp -->
                <!-- If no name value for the result node is specified the success value is the default -->
                <action name="index">
                        <result>/index.jsp</result>
                </action>

                <!-- If the URL is hello.action the call the execute method of class HelloWorldAction.
                If the result returned by the execute method is success render the HelloWorld.jsp -->
                <action name="login" class="com.danielgek.actions.LoginAction" method="execute">
                    <result name="login">/index.jsp</result>
                    <result name="success" type="redirectAction">
                        <param name="actionName">dashboard</param>

                    </result>
                </action>
                <action name="dashboard" class="com.danielgek.actions.DashAction" method="execute">
                    <result name="success">/dashboard.jsp</result>
                    <result name="login">/index.jsp</result>
                </action>
                <action name="createProjectForm">
                    <result>/createProject.jsp</result>
                </action>
                <action name="createProject" class="com.danielgek.actions.CreateProjectAction" method="execute">
                    <result>/createProject.jsp</result>
                </action>


        </package>
</struts>
